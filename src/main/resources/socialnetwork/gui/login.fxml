<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="internal.andreiva.socialnetwork.gui.GuiLoginController">
   <Pane prefHeight="400.0" prefWidth="600.0">
      <HBox alignment="CENTER" layoutX="161.0" layoutY="156.0" prefHeight="35.0" prefWidth="280.0" spacing="20.0">
         <Label text="Username:" textFill="WHITE">
            <font>
               <Font name="System Bold" size="16.0" />
            </font>
         </Label>
         <TextField fx:id="usernameTextField" onAction="#handleLogin" />
      </HBox>
      <Label alignment="CENTER" layoutX="-2.0" layoutY="71.0" prefHeight="26.0" prefWidth="606.0" text="Welcome to NameTODO Social Network" textFill="WHITE">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Label>
      <HBox layoutX="215.0" layoutY="295.0" prefHeight="26.0" prefWidth="172.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleLogin" text="Login" />
            <Label alignment="CENTER" prefHeight="22.0" prefWidth="51.0" text="or" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#handleSignUp" text="Sign up!" />
         </children>
      </HBox>
      <Label fx:id="errorLabel" alignment="CENTER" layoutX="114.0" layoutY="252.0" prefHeight="22.0" prefWidth="373.0">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="121.0" layoutY="344.0" text="Graphic design is my pasion">
         <font>
            <Font name="System Bold Italic" size="30.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" layoutX="160.0" layoutY="200.0" prefHeight="35.0" prefWidth="280.0" spacing="20.0">
         <children>
            <Label prefHeight="22.0" prefWidth="90.0" text="Password" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordTextField" onAction="#handleLogin" />
         </children>
      </HBox>
   </Pane>
</AnchorPane>
